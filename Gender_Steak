import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

#How do men and women like their meat done?

pd.set_option('display.max_rows', None, 'display.max_columns', None)
STEAK_Q = 'How do you like your steak prepared?'
GENDER_Q = 'Gender'


def get_meat_level_by_gender(data):
    sns.countplot(x=STEAK_Q, hue=GENDER_Q, data=data, order = ["Rare", "Medium rare", "Medium", "Medium Well", "Well"])
    plt.title('Meat preference by gender', fontsize=18)
    plt.xlabel('Steak level', fontsize=14)
    plt.ylabel('Gender', fontsize=14)
    plt.show()

def main_getting_functions_gender_steak():
    steak_data = pd.read_csv("steak-risk-survey.csv")
    steak_data.drop([0], inplace = True)
    meat_level = get_meat_level_by_gender(steak_data)
    get_meat_level_by_gender(meat_level)


main_getting_functions_gender_steak()


